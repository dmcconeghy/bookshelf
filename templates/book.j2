{% extends 'base.html' %}

{% block title %}

    {% if book.title is none %}

        {{ "Untitled Book" }}

    {% else %}

        {{book.title | truncate(20)}}

    {% endif %}

{% endblock %}

{% block main %}
    <div className="book">
        
    <h1>   
        {% if book.title is none %}
            {{ "Untitled Book" }}
        {% else %}
            {{book.title}}
        {% endif %} 
    </h1>

    <h2>
        {% if book.author is none %}
            {{ "Unknown Author" }}
        {% else %}
            {{book.author}}
        {% endif %}
    </h2>

    <p>{{book.description or "No description available."}}</p>
    <br>

    {{book.image or "No image found"}}
    <br>
    {{book.url or "No URL found"}}
    <br>

    {% if book.isbn is not none %}

       ISBN:{{book.isbn}}
      
    {% else %}
        <p> No preview available </p>

    {% endif %}

    <a href="{{ url_for('index') }}">Back to search</a>
    </div>
    
{% endblock %}

